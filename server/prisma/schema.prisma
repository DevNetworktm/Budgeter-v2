// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String       @id @unique @default(uuid())
  Account    Accounts[]
  Categories Categories[]
  email      String       @unique
  username   String       @unique
  password   String
  admin      Boolean      @default(false)
  update_at  DateTime     @default(now())
  create_at  DateTime     @default(now())
}

model Accounts {
  id         String       @id @unique @default(uuid())
  User       Users        @relation(references: [id], fields: [user_id])
  CashFlow   CashFlow[]
  Categories Categories[]
  label      String
  user_id    String
}

model Categories {
  id       String       @id @unique @default(uuid())
  User     Users        @relation(references: [id], fields: [user_id])
  type     CashFlowType
  Accounts Accounts[]
  CashFlow CashFlow[]
  label    String
  color    String
  user_id  String
}

model CashFlow {
  id           String       @id @unique @default(uuid())
  Categorie    Categories   @relation(references: [id], fields: [categorie_id])
  Accounts     Accounts     @relation(references: [id], fields: [accounts_id])
  type         CashFlowType
  label        String
  amount       Int
  date         DateTime
  categorie_id String
  accounts_id  String
}

model Settings {
  id        Int     @id @unique @default(autoincrement())
  currency  String
  language  String
  dark_mode Boolean
}

enum CashFlowType {
  CASH_IN
  CASH_OUT
}
